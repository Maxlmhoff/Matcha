<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Your Profile</title>
     <%- css.style %>
</head>     
<body background=../background.png>
<% include header.ejs %>
    <h2> Your profile </h2>
    <div style='display:flex'>
       <form action="/new_img" method="post">
            <img src="<%- profile.img1 %>"><BR \>
            <input type=file name=image1 accept=image/* required>
            <input type=submit name=upload value="Upload Image">
       </form>
       <form action="/new_img" method="post">
            <img src="<%- profile.img2 %>"><BR \>
            <input type=file name=image2 accept=image/* required>
            <input type=submit name=upload value="Upload Image">
       </form>
       <form action="/new_img" method="post">
            <img src="<%- profile.img3 %>"><BR \>
            <input type=file name=image3 accept=image/* required>
            <input type=submit name=upload value="Upload Image">
       </form>
       <form action="/new_img" method="post">
            <img src="<%- profile.img4 %>"><BR \>
            <input type=file name=image4 accept=image/* required>
            <input type=submit name=upload value="Upload Image">
       </form>
       <form action="/new_img" method="post">
            <img src="<%- profile.img5 %>"><BR \>
            <input type=file name=image5 accept=image/* required>
            <input type=submit name=upload value="Upload Image">
       </form>
   </div>
       <form action="/profile" method="post">
            <select name="edit" id='modifyuserlist' onchange="placeholder()">
                <option value='1'> Login </option>
                <option value='2'> Firstname </option>
                <option value='3'> Lastname </option>
                <option value='4'> Password </option>
                <option value='5'> Email </option>
            </select>
            <input type="text" name="changement" id='modifyuser' required>
            <input type="text" name="confirm" placeholder=Confirm id='confirm' required>
            <input type="submit" name="general" value="Modify" id="change" disabled="disabled">
        </form>
        <form action="/profile" method="post">
            Sexual Orientation :
             <select name="orientation">
                <option> Select Sexual Orientation </option>
                <option> Heterosexual </option>
                <option> Bisexual </option>
                <option> Bicurious </option>
                <option> Homosexual </option>
                <option> Pansexual </option>
                <option> Demisexual </option>
                <option> Heteronormative </option>
                <option> Polyamorous </option>
                <option> Grey Asexual </option>
                <option> Asexual </option>
                <option> Questioning </option>
                <option> Other </option>
            </select>
            <input type="submit" name="sub_orientation" value="Modify">
        </form>
        <form action="/profile" method="post">
        Your Gender :
        <select name="gender">
            <option> Select Gender </option>
            <option> Male </option>
            <option> Female </option>
            <option> Trans Male </option>
            <option> Trans Female </option>
            <option> Agender </option>
            <option> Cisgender </option>
            <option> Genderfluid </option>
            <option> Genderqueer </option>
            <option> Intersex </option>
            <option> Gender non-conforming </option>
            <option> Other </option>
        </select>
        <input type="submit" name="sub_gender" value="Modify">
        </form>
        <!--pour la bio faire du js pour le countdown des characteres
        faut rester sur un maxlength de 200 sinon le sql part en couille -->
        <form action="/profile" method="post">
            Your Biography:
            <input type=text name=bio placeholder='<%- profile.bio %>' maxlength=200 required>
            <input type=submit name=sub_bio value=Submit>
        </form>
    <% if (typeof error !== 'undefined' && error && error !== 'none') { 
    %> <div id=error><strong>Error: <%- error %></strong></div> <% } %>
    <% if (typeof success !== 'undefined' && success) { 
    %> <div id=success><strong>Success: <%- success %></strong></div> <% } %>
</body></html>
<script>
    change = document.getElementById('change');
    modif = document.getElementById('modifyuser');
    confirm = document.getElementById('confirm');
    verif();
    function verif() {
    setTimeout(verif,500);
    if (modif.value != "" && confirm.value != "")
        change.disabled = false;
    else
        change.disabled = true; }
    window.onload = placeholder();
    function placeholder() {
        var s = document.getElementById("modifyuserlist").value;
        if (s == '1')
            var i = '<%- profile.login %>'
        else if (s == '2')
            var i = '<%- profile.firstname %>'
        else if (s == '3')
            var i = '<%- profile.lastname %>'
        else if (s == '4')
            var i = 'New Password'
        else if (s == '5')
            var i = '<%- profile.email %>'
        document.getElementById("modifyuser").placeholder = i; }
</script>